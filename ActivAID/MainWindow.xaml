<Window x:Class="ActivAID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SIML Chatbot Demo" Height="350" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="260*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <TextBox Name="OutputBox" IsReadOnly="True" TextChanged="OutputBox_TextChanged" />
        <DockPanel Grid.Row="2">
            <TextBox Width="450" Name="InputBox" KeyDown="OnKeyDownHandler"/>
            <Button Content="Send" Name="SendButton" Click="SendButton_OnClick"/>
        </DockPanel>
    </Grid>
</Window>
